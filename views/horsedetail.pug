extends layout

block content
  h1= title

  - let horseid = toShow._id
  - let horsetype = toShow.teamname
  - let horsecost = toShow.country
  - let horsesize = toShow.number_of_players
  div
    div.row
      div(class='horseAttr mr-3') horse ID is:
      div #{horseid}
    div.row
      div(class='horseAttr mr-3') teamname is:
      div #{horsetype}
    div.row
      div(class='horseAttr mr-3') country is:
      div #{horsecost}
    div.row
      div(class='horseAttr mr-3') number_of_players:
      div #{horsesize}
